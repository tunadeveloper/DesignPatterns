@model DesignPattern.Decorator.DataAccessLayer.Message
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center">
                    <h3><i class="fas fa-paper-plane me-2"></i> Yeni Mesaj Gönder</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-user me-1"></i> Gönderen</label>
                            <input type="text" name="MessageSender" class="form-control" placeholder="Gönderen adını girin" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-user-friends me-1"></i> Alıcı</label>
                            <input type="text" name="MessageReceiver" class="form-control" placeholder="Alıcı adını girin" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-tag me-1"></i> Konu</label>
                            <input type="text" name="MessageSubject" class="form-control" placeholder="Mesaj konusunu girin" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-comment-alt me-1"></i> İçerik</label>
                            <textarea name="MessageContent" class="form-control" rows="4" placeholder="Mesaj içeriğini yazın"></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-paper-plane me-1"></i> Gönder
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted">
                    Tüm alanları eksiksiz doldurduğunuzdan emin olun.
                </div>
            </div>
        </div>
    </div>
</div>
