@model DesignPattern.CQRS.CQRSPattern.Commands.CreateProductCommand
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f4f7fc;
    }

    .form-card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        padding: 30px;
        margin-top: 50px;
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .btn i {
        margin-right: 6px;
    }
</style>

<div class="container col-md-6">
    <div class="form-card">
        <h4 class="mb-4 text-primary"><i class="fas fa-plus-circle"></i> Yeni Ürün Ekle</h4>
        <form method="post">
            <div class="mb-3">
                <label>Ürün Adı</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>

            <div class="mb-3">
                <label>Ürün Stok Sayısı</label>
                <input type="number" class="form-control" asp-for="Stock" />
            </div>

            <div class="mb-3">
                <label>Ürün Fiyatı</label>
                <input type="text" class="form-control" asp-for="Price" />
            </div>

            <div class="mb-4">
                <label>Ürün Açıklaması</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
            </div>

            <button class="btn btn-success w-100"><i class="fas fa-check-circle"></i> Ürünü Ekle</button>
        </form>
    </div>
</div>
