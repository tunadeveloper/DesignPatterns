@model DesignPattern.CQRS.CQRSPattern.Results.GetProductByIdQueryResult
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f4f7fc;
    }

    .form-card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        padding: 30px;
        margin-top: 50px;
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
    }
</style>

<div class="container col-md-6">
    <div class="form-card">
        <h4 class="mb-4 text-dark"><i class="fas fa-box-open"></i> Ürün Detayları</h4>
        <form>
            <div class="mb-3">
                <label>Ürün ID</label>
                <input type="text" class="form-control" asp-for="ProductID" readonly />
            </div>

            <div class="mb-3">
                <label>Ürün Adı</label>
                <input type="text" class="form-control" asp-for="Name" readonly />
            </div>

            <div class="mb-3">
                <label>Stok</label>
                <input type="text" class="form-control" asp-for="Stock" readonly />
            </div>

            <div class="mb-3">
                <label>Fiyat</label>
                <input type="text" class="form-control" asp-for="Price" readonly />
            </div>

            <a href="/Default/Index/" class="btn btn-secondary w-100">
                <i class="fas fa-arrow-left"></i> Geri Dön
            </a>
        </form>
    </div>
</div>
