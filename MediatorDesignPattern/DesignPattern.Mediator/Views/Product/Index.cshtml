@model List<DesignPattern.Mediator.MediatorPattern.Results.GetAllProductQueryResult>
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary"><i class="fas fa-boxes-stacked me-2"></i>Ürün Listesi</h3>
        <a href="/Product/CreateProduct" class="btn btn-info text-white"><i class="fas fa-plus"></i> Yeni Ürün Ekle</a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Fiyat</th>
                            <th>Stok</th>
                            <th>Stok Türü</th>
                            <th>Kategori</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductID</td>
                                <td>@item.ProductName</td>
                                <td>@item.ProductPrice ₺</td>
                                <td>@item.ProductStock</td>
                                <td>@item.ProductStockType</td>
                                <td>@item.ProductCategory</td>
                                <td class="text-center">
                                    <a href="/Product/GetProduct/@item.ProductID" class="btn btn-sm btn-outline-dark me-2">
                                        <i class="fas fa-folder"></i> Detaylar
                                    </a>
                                    <a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-sm btn-outline-success me-2">
                                        <i class="fas fa-edit"></i> Güncelle
                                    </a>
                                    <a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash-alt"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
