@model DesignPattern.Mediator.MediatorPattern.Commands.CreateProductCommand
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-plus me-2"></i>Yeni Ürün Ekle</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Ürün Adı</label>
                            <input type="text" asp-for="ProductName" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ürün Fiyatı</label>
                            <input type="text" asp-for="ProductPrice" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ürün Kategorisi</label>
                            <input type="text" asp-for="ProductCategory" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Stok Sayısı</label>
                            <input type="text" asp-for="ProductStock" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Stok Türü</label>
                            <input type="text" asp-for="ProductStockType" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-save me-2"></i>Ürünü Kaydet
                        </button>
                        <a href="/Product/Index" class="btn btn-outline-secondary w-100 mt-2">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
