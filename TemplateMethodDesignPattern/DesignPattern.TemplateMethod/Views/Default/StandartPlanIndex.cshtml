@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-warning">
        <div class="card-header bg-warning text-dark text-center rounded-top-4">
            <h2><i class="fas fa-star"></i> Netflix - Standart Plan</h2>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush fs-5">
                <li class="list-group-item">
                    <i class="fas fa-tag text-danger me-2"></i>
                    Plan Adı: <strong>@ViewBag.v1</strong>
                </li>
                <li class="list-group-item">
                    <i class="fas fa-money-bill-wave text-success me-2"></i>
                    Plan Ücreti: <strong>@ViewBag.v2 TL</strong>
                </li>
                <li class="list-group-item">
                    <i class="fas fa-users text-info me-2"></i>
                    Plan Kişi Sayısı: <strong>@ViewBag.v3</strong>
                </li>
                <li class="list-group-item">
                    <i class="fas fa-film text-warning me-2"></i>
                    Plan İçeriği: <strong>@ViewBag.v4</strong>
                </li>
                <li class="list-group-item">
                    <i class="fas fa-tv text-secondary me-2"></i>
                    Plan Çözünürlüğü: <strong>@ViewBag.v5</strong>
                </li>
            </ul>
        </div>
        <div class="card-footer text-center">
            <a href="/Default/BasicPlanIndex" class="btn btn-primary me-2">
                <i class="fas fa-arrow-left"></i> Temel Plan
            </a>
            <a href="/Default/UltraPlanIndex" class="btn btn-danger">
                <i class="fas fa-arrow-right"></i> Ultra Plan
            </a>
        </div>
    </div>
</div>
