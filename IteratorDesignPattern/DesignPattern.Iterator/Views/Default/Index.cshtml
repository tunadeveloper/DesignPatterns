@{
    Layout = null;
    var model = ViewBag.v as List<string>;
    int count = 0;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="text-center mb-4">
        <h3><i class="fas fa-map-marked-alt me-2 text-primary"></i>Dünya Çapında Ziyaret Noktaları</h3>
        <p class="text-muted">Ziyaret ettiğiniz harika yerlerin listesi</p>
    </div>

    <div class="row g-4">
        @foreach (var item in model)
        {
            count++;
            <div class="col-md-4">
                <div class="card shadow border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-location-dot text-danger me-2"></i>@count. Ziyaret Noktası
                        </h5>
                        <p class="card-text">@item</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
