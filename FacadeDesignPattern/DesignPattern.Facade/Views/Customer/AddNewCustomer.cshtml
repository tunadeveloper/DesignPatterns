@model DesignPattern.Facade.DataAccessLayer.Customer
@{
    Layout = "~/Views/Shared/_FacadeLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-user-plus me-2"></i>Yeni Müşteri Ekle</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-user me-1"></i> Müşteri Adı</label>
                            <input type="text" asp-for="CustomerName" class="form-control" placeholder="Adınızı giriniz" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-user-tag me-1"></i> Müşteri Soyadı</label>
                            <input type="text" asp-for="CustomerSurname" class="form-control" placeholder="Soyadınızı giriniz" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-map-marked-alt me-1"></i> Müşteri Adresi</label>
                            <input type="text" asp-for="CustomerAddress" class="form-control" placeholder="Adresinizi giriniz" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-city me-1"></i> Müşteri Şehri</label>
                            <input type="text" asp-for="CustomerCity" class="form-control" placeholder="Şehrinizi giriniz" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="/Customer/CustomerList" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-1"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>
