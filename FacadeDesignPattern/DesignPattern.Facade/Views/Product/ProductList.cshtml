@model List<DesignPattern.Facade.DataAccessLayer.Product>
@{
    Layout = "~/Views/Shared/_FacadeLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="fas fa-box me-2"></i>Ürün Listesi
        </h2>
        <a href="/Product/AddNewProduct" class="btn btn-success">
            <i class="fas fa-box me-1"></i> Yeni Ürün Ekle
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow">
            <thead class="table-primary text-center">
                <tr>
                    <th>#</th>
                    <th>Ürün Adı</th>
                    <th>Ürün Stoğu</th>
                    <th>Ürün Fiyatı</th>
                    <th>Ürün Kategorisi</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductID</td>
                        <td>@item.ProductName</td>
                        <td>@item.ProductStock</td>
                        <td>@item.ProductPrice</td>
                        <td>@item.ProductCategory</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
