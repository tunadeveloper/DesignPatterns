@model DesignPattern.Facade.DataAccessLayer.Product
@{
    ViewData["Title"] = "AddNewProduct";
    Layout = "~/Views/Shared/_FacadeLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-box-open me-2"></i>Yeni Ürün Ekle</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-tag me-1"></i> Ürün Adı</label>
                            <input type="text" asp-for="ProductName" class="form-control" placeholder="Ürün adını giriniz" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-dollar-sign me-1"></i> Ürün Fiyatı</label>
                            <input type="number" asp-for="ProductPrice" class="form-control" placeholder="Ürün fiyatını giriniz" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-boxes-stacked me-1"></i> Ürün Stoğu</label>
                            <input type="number" asp-for="ProductStock" class="form-control" placeholder="Ürün stoğunu giriniz" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-layer-group me-1"></i> Ürün Kategorisi</label>
                            <input type="text" asp-for="ProductCategory" class="form-control" placeholder="Ürün kategorisini giriniz" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="/Product/ProductList" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-1"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

