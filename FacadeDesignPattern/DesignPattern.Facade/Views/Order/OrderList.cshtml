@model List<DesignPattern.Facade.DataAccessLayer.Order>
@{
    ViewData["Title"] = "Sipariş Listesi";
    Layout = "~/Views/Shared/_FacadeLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fas fa-clipboard-list me-2"></i> Sipariş Listesi</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-light">
                    <tr>
                        <th><i class="fas fa-hashtag"></i> Sipariş ID</th>
                        <th><i class="fas fa-user"></i> Müşteri ID</th>
                        <th><i class="fas fa-calendar-alt"></i> Sipariş Tarihi</th>
                        <th><i class="fas fa-list"></i> Sipariş Detayları</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderID</td>
                            <td>@item.CustomerID</td>
                            <td>@item.OrderDate.ToString("dd MMMM yyyy")</td>
                            <td>
                                @if (item.orderDetails != null && item.orderDetails.Any())
                                {
                                    <ul class="list-unstyled">
                                        @foreach (var detail in item.orderDetails)
                                        {
                                            <li><i class="fas fa-box me-1"></i> Ürün ID: @detail.ProductID | Adet: @detail.ProductCount | Fiyat: @detail.ProductPrice ₺</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Detay Yok</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="/Order/OrderStart" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> Yeni Sipariş Ekle
        </a>

        <a href="/Order/OrderDetailStart" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Sipariş Detayları
        </a>
    </div>
</div>
