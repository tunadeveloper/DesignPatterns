@model DesignPattern.Facade.DataAccessLayer.OrderDetail
@{
    ViewData["Title"] = "Sipariş Detayı";
    Layout = "~/Views/Shared/_FacadeLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-receipt me-2"></i> Sipariş Detayı</h3>
                </div>
                <div class="card-body">
                    <form method="post">

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-user me-1"></i> Müşteri ID</label>
                            <input type="number" asp-for="CustomerID" class="form-control" placeholder="Müşteri ID giriniz" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-box-open me-1"></i> Ürün ID</label>
                            <input type="number" asp-for="ProductID" class="form-control" placeholder="Ürün ID giriniz" />
                        </div>


                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-box-open me-1"></i> Sipariş ID</label>
                            <input type="number" asp-for="OrderID" class="form-control" placeholder="Ürün ID giriniz" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-money-bill-wave me-1"></i> Sipariş Fiyatı</label>
                            <input type="number" asp-for="ProductPrice" class="form-control" placeholder="Sipariş fiyatını giriniz" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-sort-numeric-up me-1"></i> Sipariş Miktarı</label>
                            <input type="number" asp-for="ProductCount" class="form-control" placeholder="Sipariş miktarını giriniz" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check-circle me-1"></i> Siparişi Tamamla
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="/Default/OrderList" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-1"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>
